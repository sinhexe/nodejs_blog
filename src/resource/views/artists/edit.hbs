<div class="mt-4">
    <h3>Edit Artists</h3>
    <form method="POST" action="/artists/{{artist._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">name</label>
            <input type="text" class="form-control" value="{{artist.name}}" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="videoid">videoid</label>
            <input type="text" class="form-control" value="{{artist.videoid}}" id="videoid" name="videoid">
        </div>
        <div class="form-group">
            <label for="description">description</label>
            <textarea class="form-control" id="description" name="description">{{artist.description}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Ok</button>
    </form>
</div>